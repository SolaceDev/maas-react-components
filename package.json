{
	"name": "@SolaceDev/maas-react-components",
	"repository": {
		"type": "git",
		"url": "https://github.com/SolaceDev/maas-react-components"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/SolaceDev"
	},
	"version": "3.10.14",
	"description": "React component library designed for Solace.",
	"author": "",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.modern.js",
	"types": "dist/index.d.ts",
	"source": "src/index.tsx",
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"install:dev": "npm install && cd storybook/ && npm i",
		"dev:link": "npm link && cd storybook && npm link @SolaceDev/maas-react-components",
		"build": "microbundle --compress --jsx React.createElement --format cjs,modern --define process.env.NODE_ENV=production",
		"build:dev": "microbundle watch --jsx React.createElement --no-compress --format cjs --define process.env.NODE_ENV=development",
		"start": "./scripts/start.sh",
		"prepare": "husky install && run-s build",
		"test": "cross-env CI=1 react-scripts test --env=jsdom",
		"test:build": "run-s build",
		"test:lint": "eslint .",
		"test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
		"test:watch": "react-scripts test --env=jsdom",
		"predeploy": "cd example && npm install && npm run build",
		"deploy": "gh-pages -d example/build",
		"types": "tsc",
		"prettier:fix": "prettier --write .",
		"lint:fix": "eslint ./src --fix"
	},
	"peerDependencies": {
		"react": "^17.0.2"
	},
	"devDependencies": {
		"@emotion/core": "^10.1.1",
		"@testing-library/jest-dom": "^5.15.0",
		"@testing-library/react": "^12.1.2",
		"@testing-library/user-event": "^13.5.0",
		"@types/jest": "^27.0.2",
		"@types/lodash": "^4.14.178",
		"@types/node": "^16.11.6",
		"@types/react": "^17.0.34",
		"@types/react-dom": "^17.0.11",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"babel-eslint": "^10.1.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-react": "^7.26.1",
		"eslint-plugin-react-hooks": "^4.2.1-beta-0cc724c77-20211125",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-sonarjs": "^0.10.0",
		"eslint-plugin-unused-imports": "^1.1.5",
		"gh-pages": "^3.2.3",
		"husky": "^7.0.4",
		"lint-staged": "^11.2.6",
		"microbundle": "^0.14.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.4.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-scripts": "^4.0.3",
		"typescript": "^4.4.4"
	},
	"dependencies": {
		"@emotion/react": "^11.4.1",
		"@emotion/styled": "^11.3.0",
		"@material-ui/core": "^5.0.0-beta.3",
		"@material-ui/icons": "^5.0.0-beta.1",
		"@types/react-beautiful-dnd": "^13.1.2",
		"codemirror": "^5.63.3",
		"lodash": "^4.17.21",
		"react-beautiful-dnd": "^13.1.0",
		"react-codemirror2": "^7.2.1",
		"react-resize-aware": "^3.1.1",
		"react-split-pane": "^0.1.92"
	},
	"files": [
		"dist"
	],
	"lint-staged": {
		"*.{tsx,ts}": [
			"eslint --cache --fix"
		],
		"*.{ts,tsx,css,md}": "prettier --write"
	}
}
