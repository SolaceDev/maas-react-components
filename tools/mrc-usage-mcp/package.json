{
	"name": "mrc-usage-mcp",
	"version": "0.1.0",
	"description": "A Model Context Protocol server for MRC usage",
	"type": "module",
	"bin": {
		"mrc-usage-mcp": "./build/index.js"
	},
	"files": [
		"build"
	],
	"scripts": {
		"build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
		"build:dist": "tsc -p tsconfig.dist.json",
		"watch": "tsc --watch",
		"start": "node build/index.js"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "0.6.0",
		"axios": "^1.9.0",
		"fuse.js": "^7.0.0"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.24",
		"axios-mock-adapter": "^1.22.0",
		"cross-env": "^10.0.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.2",
		"typescript": "^5.3.3"
	}
}
