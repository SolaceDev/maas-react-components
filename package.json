{
	"name": "@SolaceDev/maas-react-components",
	"repository": {
		"type": "git",
		"url": "https://github.com/SolaceDev/maas-react-components"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/SolaceDev"
	},
	"version": "13.1.1",
	"description": "React component library designed for Solace.",
	"author": "",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.modern.js",
	"types": "dist/index.d.ts",
	"source": "src/index.tsx",
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"install:dev": "npm install && cd storybook/ && npm i",
		"dev:link": "npm link && cd storybook && npm link @SolaceDev/maas-react-components",
		"build": "microbundle --compress --jsx React.createElement --format cjs,modern --define process.env.NODE_ENV=production",
		"build:dev": "microbundle watch --jsx React.createElement --no-compress --format cjs --define process.env.NODE_ENV=development",
		"start": "./scripts/start.sh",
		"prepare": "husky install && run-s build",
		"test": "cross-env CI=1 react-scripts test --env=jsdom",
		"test:build": "run-s build",
		"test:lint": "eslint .",
		"test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
		"test:watch": "react-scripts test --env=jsdom",
		"predeploy": "cd example && npm install && npm run build",
		"deploy": "gh-pages -d example/build",
		"types": "tsc",
		"prettier:fix": "prettier --write .",
		"lint:fix": "eslint ./src --fix",
		"lint-storybook:fix": "eslint ./storybook/src/stories --fix"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-router-dom": "^5.3.4"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.4.6",
		"@testing-library/react": "^12.1.5",
		"@testing-library/user-event": "^14.5.1",
		"@types/diff": "^5.0.2",
		"@types/jest": "^29.5.7",
		"@types/lodash": "^4.14.200",
		"@types/node": "^20.8.10",
		"@types/react": "17.0.39",
		"@types/react-dom": "17.0.12",
		"@types/react-router-dom": "^5.3.3",
		"@types/react-window": "^1.8.5",
		"@typescript-eslint/eslint-plugin": "^6.9.1",
		"@typescript-eslint/parser": "^6.9.1",
		"attr-accept": "^2.2.2",
		"babel-eslint": "^10.1.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-sonarjs": "^0.23.0",
		"eslint-plugin-storybook": "^0.6.15",
		"eslint-plugin-unused-imports": "^3.0.0",
		"gh-pages": "^6.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"microbundle": "^0.15.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.3",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-scripts": "^5.0.1",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"@emotion/react": "^11.11.1",
		"@emotion/styled": "^11.11.0",
		"@mui/icons-material": "^5.14.16",
		"@mui/material": "^5.14.16",
		"@mui/x-date-pickers": "^7.3.1",
		"@rjsf/core": "^5.17.1",
		"@rjsf/mui": "^5.17.1",
		"@rjsf/utils": "^5.17.1",
		"@rjsf/validator-ajv8": "^5.18.1",
		"@types/react-beautiful-dnd": "^13.1.2",
		"ajv": "^8.12.0",
		"codemirror": "^5.65.5",
		"diff": "^5.1.0",
		"diff2html": "^3.4.22",
		"lodash": "^4.17.21",
		"moment": "^2.30.1",
		"react-beautiful-dnd": "^13.1.0",
		"react-codemirror2": "^7.2.1",
		"react-split-pane": "^0.1.92",
		"react-virtuoso": "^4.7.11",
		"react-window": "^1.8.8",
		"recharts": "^2.12.7"
	},
	"files": [
		"dist",
		"LICENSE"
	],
	"lint-staged": {
		"*.{tsx,ts}": [
			"eslint --cache --fix"
		],
		"*.{ts,tsx,css,md}": "prettier --write"
	}
}
