{
	"compilerOptions": {
		"outDir": "dist",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"jsxFactory": "",
		"jsxFragmentFactory": "",
		"sourceMap": true,
		"declaration": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx", "jest.setup.js"],
	"exclude": ["./node_modules", "./node_modules/*", "dist", "example"]
}
