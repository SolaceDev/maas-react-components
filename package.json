{
	"name": "@SolaceDev/maas-react-components",
	"repository": {
		"type": "git",
		"url": "https://github.com/SolaceDev/maas-react-components"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/SolaceDev"
	},
	"version": "3.12.13",
	"description": "React component library designed for Solace.",
	"author": "",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.modern.js",
	"types": "dist/index.d.ts",
	"source": "src/index.tsx",
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"install:dev": "npm install && cd storybook/ && npm i",
		"dev:link": "npm link && cd storybook && npm link @SolaceDev/maas-react-components",
		"build": "microbundle --compress --jsx React.createElement --format cjs,modern --define process.env.NODE_ENV=production",
		"build:dev": "microbundle watch --jsx React.createElement --no-compress --format cjs --define process.env.NODE_ENV=development",
		"start": "./scripts/start.sh",
		"prepare": "husky install && run-s build",
		"test": "cross-env CI=1 react-scripts test --env=jsdom",
		"test:build": "run-s build",
		"test:lint": "eslint .",
		"test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
		"test:watch": "react-scripts test --env=jsdom",
		"predeploy": "cd example && npm install && npm run build",
		"deploy": "gh-pages -d example/build",
		"types": "tsc",
		"prettier:fix": "prettier --write .",
		"lint:fix": "eslint ./src --fix"
	},
	"peerDependencies": {
		"react": "^17.0.2"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.1",
		"@testing-library/react": "^12.1.2",
		"@testing-library/user-event": "^13.5.0",
		"@types/jest": "^27.4.0",
		"@types/lodash": "^4.14.179",
		"@types/node": "^17.0.21",
		"@types/react": "^17.0.39",
		"@types/react-dom": "^17.0.12",
		"@typescript-eslint/eslint-plugin": "^5.14.0",
		"@typescript-eslint/parser": "^5.14.0",
		"babel-eslint": "^10.1.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.10.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-react": "^7.29.3",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-sonarjs": "^0.12.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"gh-pages": "^3.2.3",
		"husky": "^7.0.4",
		"lint-staged": "^12.2.0",
		"microbundle": "^0.14.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.5.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-scripts": "^5.0.0",
		"typescript": "^4.6.2"
	},
	"dependencies": {
		"@emotion/react": "^11.8.1",
		"@emotion/styled": "^11.8.1",
		"@mui/icons-material": "^5.5.0",
		"@mui/material": "^5.5.0",
		"@types/react-beautiful-dnd": "^13.1.2",
		"codemirror": "^5.63.3",
		"lodash": "^4.17.21",
		"react-beautiful-dnd": "^13.1.0",
		"react-codemirror2": "^7.2.1",
		"react-resize-aware": "^3.1.1",
		"react-split-pane": "^0.1.92"
	},
	"files": [
		"dist"
	],
	"lint-staged": {
		"*.{tsx,ts}": [
			"eslint --cache --fix"
		],
		"*.{ts,tsx,css,md}": "prettier --write"
	}
}
