{
	"name": "@SolaceDev/maas-react-components",
	"repository": {
		"type": "git",
		"url": "https://github.com/SolaceDev/maas-react-components"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/SolaceDev"
	},
	"version": "1.2.8",
	"description": "React component library designed for Solace.",
	"author": "",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.modern.js",
	"types": "dist/index.d.ts",
	"source": "src/index.tsx",
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"install:dev": "npm install && cd storybook/ && npm i",
		"dev:link": "npm link && cd storybook && npm link @SolaceDev/maas-react-components",
		"build": "microbundle --compress --jsx React.createElement --format cjs,modern",
		"build:dev": "microbundle watch --jsx React.createElement --no-compress --format cjs",
		"start": "./scripts/start.sh",
		"prepare": "run-s build",
		"test": "cross-env CI=1 react-scripts test --env=jsdom",
		"test:build": "run-s build",
		"test:lint": "eslint .",
		"test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
		"test:watch": "react-scripts test --env=jsdom",
		"predeploy": "cd example && npm install && npm run build",
		"deploy": "gh-pages -d example/build",
		"types": "tsc",
		"prettier:fix": "prettier --write **",
		"lint:fix": "eslint ./src --fix"
	},
	"peerDependencies": {
		"react": "^17.0.2"
	},
	"devDependencies": {
		"@emotion/core": "^10.1.1",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.5.0",
		"@testing-library/user-event": "^7.2.1",
		"@types/jest": "^25.1.4",
		"@types/node": "^12.12.38",
		"@types/react": "^17.0.17",
		"@types/react-dom": "^17.0.9",
		"@typescript-eslint/eslint-plugin": "^4.29.1",
		"@typescript-eslint/parser": "^4.29.1",
		"babel-eslint": "^10.1.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.29.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"gh-pages": "^3.2.3",
		"husky": "^7.0.2",
		"lint-staged": "^10.5.4",
		"microbundle": "^0.13.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-scripts": "^4.0.3",
		"typescript": "3.9.10"
	},
	"dependencies": {
		"@emotion/react": "^11.4.1",
		"@emotion/styled": "^11.3.0",
		"@material-ui/core": "^5.0.0-beta.3",
		"@material-ui/icons": "^5.0.0-beta.1"
	},
	"files": [
		"dist"
	],
	"lint-staged": {
		"*.{tsx,ts}": [
			"eslint --cache --fix"
		],
		"*.{ts,tsx,css,md}": "prettier --write"
	}
}
